<Window x:Class="WpfMk2._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="640" Width="340" AllowsTransparency="True" WindowStyle="None" Background="Transparent" MouseDown="Window_MouseDown" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" ResizeMode="NoResize">


    <Window.Resources>
        <Style x:Key="buttonStyle" TargetType="Button">
            <Setter Property="BorderBrush" Value="#FF8800"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF8800"/>
            <Setter Property="Width" Value="70"/>
            <Setter Property="Height" Value="30"/>
        </Style>
    </Window.Resources>

    <Grid >
        <Border Background="#000000" BorderThickness="0">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="150"></RowDefinition>
                    <RowDefinition Height="140*"></RowDefinition>
                    <RowDefinition Height="240"></RowDefinition>
                    <RowDefinition Height="52"></RowDefinition>
                </Grid.RowDefinitions>

                <Canvas Margin="-50,-30,0,0" >
                    <StackPanel x:Name="warningLine" Orientation="Horizontal">

                        <Border Background="#CC0000" Height="1040" Margin="0,0,36,0" Width="18">
                            <Border.RenderTransform>
                                <RotateTransform Angle="45" CenterX="0" CenterY="0"></RotateTransform>
                            </Border.RenderTransform>
                        </Border>
                        <Border Background="#CC0000" Height="1040" Margin="0,0,36,0" Width="18">
                            <Border.RenderTransform>
                                <RotateTransform Angle="45" CenterX="0" CenterY="0"></RotateTransform>
                            </Border.RenderTransform>
                        </Border>
                        <Border Background="#CC0000" Height="1040" Margin="0,0,36,0" Width="18">
